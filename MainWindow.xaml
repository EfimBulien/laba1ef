<Window x:Class="lab1ef.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab1ef"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" x:Name="CarsButton" Content="Открыть таблицу с машинами" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20" Click="CarsButton_Click"/>
        <Button Grid.Column="1" x:Name="DriversButton" Content="Открыть таблицу с водителями" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20" Click="DriversButton_Click"/>
    </Grid>
</Window>

    